<div class="logo-wrap"><a href="/" class="logo" title="Lokalite Home">lokalite</a></div>
<div class="middle cf">
  <%
    if params[:controller] == 'places'
      active_tab = 'places'
    else
      active_tab = 'events'
    end
  -%>
  <% unless ['/users', '/business', '/static', '/my'].any? {|path| fullpath.start_with?(path)} || fullpath == '/' %>
    <%= render :partial => '/shared/search', :locals => {:active_tab => active_tab} %>
  <% end %>
  <div class="ext">
    <% if user_signed_in? %>
      <!-- Linking to DATEBOOK for NEW PLAN creation -->
      <%= link_to 'New Plan', datebook_path, :class => 'btn primary' %>
      <% if current_user.organizations.any? or user_sudoing? %>
        <%= link_to "Create Event", new_my_event_path, :class => 'btn primary' %>
      <% end %>
    <% end %>
  </div>
</div>

<nav class='nav secondary-nav'>
  <ul>
    <% if user_signed_in? %>
      <li>
        <div class="user-menu">
          <%= image_tag current_user.image_url, :size => '25x25', :class => 'user-img' %>
          <% if user_sudoing? %>
            <span class='acting-like'>Acting like</span>
          <% end %>
          <%= link_to current_user.full_name, '#', :class => 'user-link user-name' %>
          <%= link_to raw("&#9662;"), '#', :class => 'user-link user-name' %>
        </div>
        <ul class="dropdown-menu">
          <li>
            <%= link_to 'Bookmarks', datebook_path %>
          </li>
          <% if current_user.organizations.size > 1 %>
            <li>
              <%= link_to "My Businesses", my_organizations_path %>
            </li>
          <% elsif current_user.organizations.any? %>
            <li>
              <%= link_to('Edit My Events', my_organization_path(current_user.organizations.first)) %>
            </li>
          <% end %>
          <li>
            <%= link_to "Profile Settings", edit_profile_path %>
          </li>
          <% if real_user_is_admin? %>
            <li>
              <%= link_to "Manage Featured Events", manage_featured_events_path %>
            </li>
          <% end %>
          <li>
            <% if user_sudoing? %>
              <%= link_to 'Back to your user', :controller => 'admin/users', :action => :unsudo %>
            <% else %>
              <%= link_to 'Logout', destroy_user_session_path, :onclick => 'FB.logout();' %>
            <% end %>
          </li>
        </ul>
      </li>
    <% else %>
      <li>
        <div class="user-menu">
          <%= link_to 'Sign In', new_user_session_path %>
        </div>

        <% if false %>
          <span class="dd-arrow">&#9662;</span>
          <ul class="dropdown-menu sign-in">
            <li>
              <fb:login-button onlogin="afterFacebookSignIn()">Sign up using Facebook</fb:login-button>
              <%= form_for(:users, :controller => :users, :action=> :sign_in) do |f| %>
                <div>
                  <%= f.email_field :email, :placeholder => "Email", "class"=>"landing-form-field" %>
                </div>
                <div>
                  <%= f.password_field :password, :placeholder => "Password", "class"=>"landing-form-field" %>
                </div>
                <div class='buttons'>
                  <%= f.submit "Sign in" %>
                </div>
              <% end %>
            </li>
          </ul>
        <% end %>
      </li>
    <% end %>
  </ul>
</nav>

