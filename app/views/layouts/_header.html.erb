<a href="/" class="logo" title="Lokalite Home">lokalite</a>

<nav class='user-navigation'>
  <ul>
    <% if user_signed_in? %>
      <% if user_sudoing? %>
        <li>
          Acting like <%= effective_user.email %>.
          <%= link_to '[x]', :controller => 'admin/users', :action => :unsudo %>
        </li>
      <% end %>
      <li>
        <%= link_to raw("Account &nbsp;&#9662;"), '#my_account' %>
        <ul>
          <% if current_user.organizations.size == 0 %>
            <li>
              <%= link_to "Create Organization", new_my_organization_path %>
            </li>
            <% end %>
          <% if current_user.organizations.size > 1 %>
            <li>
              <%= link_to "My Businesses", my_organizations_path %>
            </li>
          <% elsif current_user.organizations.any? %>
            <li>
              <%= link_to('Edit My Events', my_organization_path(current_user.organizations.first)) %>
            </li>
          <% end %>
          <li>
            <%= link_to "Settings", edit_profile_path %>
          </li>
          <li>
            <%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
          </li>
        </ul>
      </li>
      <% if current_user.organizations.any? %>
        <li>
          <%= link_to "Create Event", new_my_event_path, :class => 'create-event' %>
        </li>
      <% end %>
    <% else %>
      <% if false %>
        <li>
          <%= link_to 'Sign Up', new_user_registration_path %>
        </li>
      <% end %>
      <li>
        <%= link_to 'Sign In', new_user_session_path %>
      </li>
      <li>
        <%= link_to 'Contest Registration', static_path(:contest_registration), :class => 'contest-registration' %>
      </li>
    <% end %>
  </ul>
</nav>

