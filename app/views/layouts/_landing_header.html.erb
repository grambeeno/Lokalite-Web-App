<div class="logo-wrap"><a href="/" class="logo" title="Lokalite Home">lokalite</a></div>
<div class="middle cf">
  <div class="ext">
<% if user_signed_in? %>
  <!-- Linking to DATEBOOK for NEW PLAN creation -->
    <%= link_to 'New Plan', datebook_path, :class => 'btn primary' %>
    <% if current_user.organizations.any? %>
      <% if user_sudoing? %>
      <%= link_to "Create Event", new_my_event_path, :class => 'btn primary' %>
      <% end %>
    <% end %>
<% end %>
  </div>
</div>

<nav class='nav secondary-nav'>
  <ul>
    <% if user_signed_in? %>
      <li class="cf">
        <div class="user-li cf">
        <% if user_sudoing? %>
          Acting like <%= current_user.email %>.
          <%= link_to '[x]', :controller => 'admin/users', :action => :unsudo %>
        <% else %>
          <% if current_user.image_url.present? %>
          <%= image_tag current_user.image_url, :size => '25x25', :class => 'user-img' %>
          <% end %>
          <%= link_to raw("#{current_user.full_name}"), '#', :class => 'user-link user-name' %>
          <span class="dd-arrow">&#9662;</span>
        </div><!-- end user-li -->
        <% end %>
        <ul class="dropdown-menu">
          <li>
            <%= link_to 'My Profile', datebook_path %>
          </li>
          <% if current_user.organizations.size > 1 %>
            <li>
              <%= link_to "My Businesses", my_organizations_path %>
            </li>
          <% elsif current_user.organizations.any? %>
            <li>
              <%= link_to('Edit My Events', my_organization_path(current_user.organizations.first)) %>
            </li>
          <% end %>
          <li>
            <%= link_to "Profile Settings", edit_profile_path %>
          </li>
          <li>
          <%= link_to 'Logout', destroy_user_session_path, :onclick => 'FB.logout();' %>
          </li>
        </ul>
      </li>
    <% else %>
      <li class="cf">
        <div class="user-li cf">
          <%= link_to 'Sign In', '#', :class => 'user-link user-name' %>
          <span class="dd-arrow">&#9662;</span>
        </div><!-- end user-li -->
        
        <ul class="dropdown-menu" style="width: 300px">
        <fb:login-button size='large' onlogin="afterFacebookSignIn()">Sign up using Facebook</fb:login-button>
  <%= form_for(:users, :controller => :users, :action=> :sign_in) do |f| %>
  <div>
        <%= f.email_field :email, :placeholder => "Email", "class"=>"landing-form-field" %>
      </div><br />
      <div>
        <%= f.password_field :password, :placeholder => "Password", "class"=>"landing-form-field" %>
      </div><br />
      <div class='buttons'>
        <%= f.submit "Sign in" %></div>

      </div>
      <% end %>
      <% end %>
    </ul>
</nav>


