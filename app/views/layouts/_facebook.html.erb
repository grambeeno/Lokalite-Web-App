<div id="fb-root"></div>
<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '<%= FACEBOOK_APP_ID %>', // App ID
      channelURL : '//lokalite.dev/channel.html', // Channel File
      status     : true, // check login status
      cookie     : true, // enable cookies to allow the server to access the session
      oauth      : true, // enable OAuth 2.0
      xfbml      : true  // parse XFBML
    });

    facebookLoaded();
  };

  (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) {return;}
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=<%= FACEBOOK_APP_ID %>";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));

  function sendRequestToManyRecipients(data) {
    FB.ui({method: 'apprequests',
      message: data.title + ' - ' + data.description
    }, requestCallback);
  }

  function requestCallback(response) {
    response.uuid = $('.invite-to-plan').data('uuid');
    $.post('/facebook/ajax_request_handler', response, function(data) {
      // Console.log
    });
  }
</script>
