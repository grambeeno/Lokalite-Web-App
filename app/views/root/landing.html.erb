<div id="public-landing">
  <div class="center-field">

    <div class="left-side">
      <h1 class="landing-title">Discover local events</h1>
      <p class="landing-desc">Find, share, bookmark and plan with friends using the thousands
      of local events going on in your community</p>

      <ul class="events">
        <% Event.featured.limit(2).each do |event| %>
        <%= render :partial => '/events/event', :locals => { :event => event } %>
        <% end %>
      </ul>
    </div>

    <div class="sign-up">
      <h2><strong>New to Lokalite?</strong> Join Today!</h2>

      <div>
        <fb:login-button size='xlarge' onlogin="afterFacebookSignIn()">Sign up using Facebook</fb:login-button>
      </div>

      <h3>or with email and password</h3>
      <br />

      <%= form_for(:users, :controller => :users, :action=> :sign_in) do |f| %>
        <div>
          <%= f.email_field :email, :placeholder => "Email", :class => "landing-form-field" %>
        </div>

        <div>
          <%= f.password_field :password, :placeholder => "Password", :class => "landing-form-field" %>
        </div>

        <div>
          <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation", :class => "landing-form-field" %>
        </div>

        <div>
          <%= f.submit 'Sign Up', :class => "btn large dark" %>
        </div>
      <% end %>

      <hr />

      <p>
        <%= link_to 'Are you a business? Add your events here!', business_sign_up_path %>
      </p>

    </div>
  </div>
</div>

