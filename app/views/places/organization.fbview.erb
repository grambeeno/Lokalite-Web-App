<body>
  <div data-role='page'>
    <div data-role='header' data-position='fixed'> 
      <h1>
        <%= @organization.name %>
      </h1>
      </div>
          <div data-role='navbar' data-theme='a'>
            <ul>
              <li><%= link_to "Back", '/events/categories', "data-rel"=>"back" unless current_page? root_path %></li>
              <li><%= link_to 'Full Site', 'http://lokalite.com', :target => '_blank' %></li>
              <li><%= link_to "Place Categories", '/places/categories', "data-role"=> "button" %></li>
            </ul>
            </div>
    <div data-role='content'>
      <fieldset class='ui-grid-a'>
        <div class='ui-block-a' style='width:23%'>
          <%= image_tag(@organization.image.url(:thumb)) %>
        </div>
        <div class='ui-block-b' style='width:77%'>
          <h3 style='margin-top:0px'>
            <%= @organization.name %>
          </h3>
        </div>
      </div>
      <div data-role='collapsible' class='ui-block-a' data-theme='e' style='width:100%'>
        <h3><center>Ucoming Events</center></h3>
          <%= render :partial => 'events/upcoming' %>
      </div>
      <div class='ui-block-a' style='width:100%'>
        <% if @organization.url.present? %>
        <%= link_to @organization.url, @organization.url, "rel"=>"external", "data-role"=>"button", "data-theme"=>"e" %>
        <% end %>
      </div>
        <div class='ui-block-a' style='width:100%'>
        <% if @organization.phone.present? %>
        <button class='submit' data-theme='e'>
          <%= number_to_phone @organization.phone.gsub(/\D/, ''), :area_code => true %>
          <% end %>
        </button>
      </div>
      <div class='ui-block-a ui-body-e' style='width:100% white-space:normal position:absolute; 0 0 0 0'>
        <%= link_to google_maps_image(@organization.location, :size => '490x260'), gmaps_url_for(@organization.location),                         :target => '_blank', :class => 'map_link' %>
      </div>
      <div class='ui-block-a' style='width:100%; margin:10px 0 0 5px;'>
        <strong>
          About <%= @organization.name %>
        </strong>
        <br /><%= @organization.description %>
      </div>
  </div>
    </fieldset>
</body>
