<div class='content'>
  <% if params[:business] %>
    <h1 class='big'>Sign up now to promote your events!</h1>
    <h2 class='big'>
      Because we are awesome and so are you.
    </h2>
  <% else %>
    <h1 class='big'>Discover Boulder Events</h1>
    <h2 class='big'>
      With lokalite, finding something to do has never been easier.
      </br>
      Whether at home or traveling around, you'll always feel like a lokal.
    </h2>
    <h2 class='big'>
      Get started, fun's right around the corner.
    </h2>
  <% end %>

  <div id="ftest">
    <div class="ua398" onclick="FB.login(null,{perms:'email'});return false;">
      <div class='m000250'>
        <span class=" fb_button_text">
          <img src="/images/fbtest_small.png" alt="Log in"/>
        </span>
      </div>
    </div> 
  </div>

  <div class='devise-fields'>
    <!-- <div id="facebook", style="margin-right: 150px">
      <fb:login-button size='large' onlogin="afterFacebookSignIn()">Sign up with Facebook</fb:login-button>
    </div> -->

    <h2 class='big mtl'>or with an email and password:</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div>
        <%= f.email_field :email, :placeholder => "Email" %>
      </div>

      <div>
        <%= f.password_field :password, :placeholder => "Password" %>
      </div>

      <div>
        <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation" %>
      </div>

      <div class='buttons'>
        <%= f.submit "Sign up" %>
        or
        <%= link_to "Sign in", new_session_path(resource_name) %>
      </div>
    <% end %>
  </div>

</div>
