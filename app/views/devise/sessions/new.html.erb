<div class='content'>
  <div>
    <% if params[:business] %>
      <h1 class='big'>Sign up now to promote your events!</h1>
      <h2 class='big'>
        Because we are awesome and so are you.
      </h2>
    <% else %>
      <h1 class='big'>Discover Boulder Events</h1>
      <h2 class='big'>
        With lokalite, finding something to do has never been easier. 
        </br>
        Whether at home or traveling around, you'll always feel like a lokal.
      </h2>
      <h2 class='big'>
        Get started, fun's right around the corner.
      </h2>
    <% end %>
  </div>

  <div class='devise-fields'>
    <div id="facebook", style="margin-right: 150px">
      <fb:login-button size='large' onlogin="afterFacebookSignIn()">Sign in with Facebook</fb:login-button>
    </div>

    <!--<script type="text/javascript">
      $(document).ready(function(){

        $(".btn-slide").click(function(){
          $("#secondary-signin").slideToggle("slow");
          $(this).toggleClass("active"); return false;
        });


      });
    </script> -->

    <h2 class='big mtl'>or with an email and password. <!-- <a href="#secondary-signin" class="btn-slide">email and password</a>. --> </h2>

<!-- Note: The div below had an id of 'secondary-signin' in order to give it the slide effect -->

    <div>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div>
          <%= f.email_field :email, :placeholder => "Email" %></div>

        <div>
          <%= f.password_field :password, :placeholder => "Password" %></div>

        <% if devise_mapping.rememberable? -%>
          <div style="width: 350px"><%= f.check_box :remember_me %> <%= f.label :remember_me %>
        <% end -%>
        <%= link_to "Forgot your password?", new_password_path(resource_name), :style => "margin-left: 85px" %><br />
          </div>

        <div class='buttons'>
          <%= f.submit "Sign in" %>
          or
          <%= link_to "Sign up", new_registration_path(resource_name) %><br />
        </div>
      </div>
    <% end %>
  </div>

</div>
