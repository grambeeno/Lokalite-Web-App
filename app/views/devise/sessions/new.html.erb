<div class='content'>
  <div>
    <% if params[:business] %>
      <h1 class='big'>Sign up now to promote your events!</h1>
      <h2 class='big'>
        Because we are awesome and so are you.
      </h2>
    <% else %>
      <h1 class='big'>Discover Boulder Events</h1>
      <h2 class='big'>
        With lokalite, finding something to do has never been easier. 
        </br>
        Whether at home or traveling around, you'll always feel like a lokal.
      </h2>
      <h2 class='big'>
        Get started, fun's right around the corner.
      </h2>
    <% end %>
  </div>

  <div class='devise-fields'>
    <fb:login-button size='large' onlogin="afterFacebookSignIn()">Connect with Facebook</fb:login-button>

    <script type="text/javascript">
      $(document).ready(function(){

        $(".btn-slide").click(function(){
          $("#secondary-signin").slideToggle("slow");
          $(this).toggleClass("active"); return false;
        });


      });
    </script>

    <h2 class='big mtl'>or with an <a href="#secondary-signin" class="btn-slide">email and password</a>.</h2>

    <div id="secondary-signin">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div><%= f.label :email %><br />
          <%= f.email_field :email %></div>

        <div><%= f.label :password %><br />
          <%= f.password_field :password %></div>

        <% if devise_mapping.rememberable? -%>
          <div style="width: 350px; margin: 0 0 0 25px"><%= f.check_box :remember_me %> <%= f.label :remember_me %>
        <% end -%>
        <%= link_to "Forgot your password?", new_password_path(resource_name), :style => "margin-left: 85px" %><br />
          </div>

        <div class='buttons'>
          <%= f.submit "Sign in" %>
          or
          <%= link_to "Sign up", new_registration_path(resource_name) %><br />
        </div>
      </div>
    <% end %>
  </div>

</div>
