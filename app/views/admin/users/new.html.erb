<!-- See Controllers > Admin > Users_Controller.rb -->
<div style='width:80%;margin:auto'>

  <br />
  <%= link_to raw('&larr; All Users'), :action => :index %>
  <br />
  <br />

  <%= form(@user) do |f| %>

    <%= f.error_messages %>

    <br />
    <%= f.text_field :email, :placeholder => "Email", :style => 'padding: 10px' %>
    <br />

    <br />
    <%= f.text_field :password, :placeholder => "Password", :value => nil, :style => 'padding: 10px' %>
    <br />

    <br />
    <%= f.submit 'Create User', :class => 'btn secondary' %>

  <% end %>
</div>
