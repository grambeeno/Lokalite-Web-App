<section class="organization">
  <div class='title'>
    <div class="title-image">
      <%= image_tag @organization.image.url(:thumb) %>
    </div>
    <div class="text">
      <h1><%= @organization.name %></h1>
      <h2>
        <%= link_to @organization.category, '#' %>
      </h2>
    </div>
  </div>

  <div class='image'>
    <%= image_tag(@organization.image.url(:large)) %>
  </div>

  <div class="detail">
    <dl>
      <dt>Description</dt>
      <dd><%= clean_format @organization.description %></dd>

      <% if @organization.phone.present? %>
        <dt>Phone</dt>
        <dd><%= number_to_phone @organization.phone, :area_code => true %></dd>
      <% end %>

      <% if @organization.url.present? %>
        <dt>Website</dt>
        <dd><%= link_to @organization.url, @organization.url, :target => 'blank' %></dd>
      <% end %>
    </dl>

    <div class="location">
      <div class="map">
        <%= link_to google_maps_image(@organization.location, :size => '363x130'), gmaps_url_for(@organization.location), :target => '_blank', :class => 'map_link' %>
      </div>
    </div>
  </div>


  <div class="clear"></div>

  <div class="organization-events">
    <h2>Upcoming Events</h2>
    <%= render :partial => '/events/event_previews', :locals => {:events => @organization.events} %>
  </div>
</section>

