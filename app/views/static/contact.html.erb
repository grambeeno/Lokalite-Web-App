<style>

  .body {
    margin: 0px 25px 0px 25px;
    font-size: 14pt;
}

</style>

<% content_for(:context) { "Contact Us" } %>

<section class="profile"><article>

<h1>Contact</h1>

<p class="body">General Inquiries? Know of a Kick-Ass event going on that we missed? Let us know! 

<div class="body">
<%= form_for :email, :url => {:controller => 'static', :action => 'send_mail' } do |f| %>
  <div>
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 77 %>
  </div><br />
  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, :size => 77 %>
  </div><br />
  <div>
    <%= f.label :subject %><br />
    <%= f.select :subject, ['Select One...', 'General', 'Bugs & Problems', 'Feature Requests', 'Founders', 'Client Relations', 'Public Relations'] %>
  </div><br />
  <div>
    <%= f.label :comments %><br />
    <%= f.text_area :email_body, :rows => 5, :cols => 80 %>
  </div>
  <div>
    <%= f.submit 'Send Message' %>
  </div>
  
  <% end %>
</div>
</article></section>
