<fieldset>
  <div>
    <h3 class="title" style="font-size:18pt"><strong>Start Advertising</strong></h3>
    <p class="title" style="margin-top:-10px; font-size:14pt">Leverage Lokalite's innovative platform to take your events to the next level<p>
  </div>

  <div class="row">
    <div class="span4">
      <h3 class="title" style="font-size:12pt">Subscriptions</h3>
      <p class='title' style="margin-top:-10px">Let us help manage your <br /> events on Lokalite.<p>
    </div>
    <div class="span4">
      <h3 class="title" style="font-size:12pt">Featured Events</h3>
      <p class='title' style="margin-top:-10px">Supercharge your events with <br /> Lokalite's featured events.<p>
    </div>
    <div class="span5">
      <h3 class="title" style="font-size:12pt">Social Media Consulting</h3>
      <p class='title' style="margin-top:-10px">Consult with our social media <br /> experts to increase you online presence.<p>
    </div>
  </div>

  <div class="backdrop">
    <div>
      <h3 class="title" style="font-size:16pt"><strong>Get Started with Lokalite's Products & Services</strong></h3>
      <p class="title" style="margin-top:-10px">All fields required unless otherwise indicated</p>
    </div><br />

  <div class='form-stacked'>
    <%= form_for :email, :url => { :controller => 'static', :action => 'send_advertise_mail' } do |f| %>
  <div class="row">
    <div class="span3" style="margin-top:-6px">
      <h3>Advertiser</h3>
    </div>
    <div class="span5">
      <%= f.label 'Company or Brand Name' %><br />
      <%= f.text_field :company, "id"=>"xlInput" %>
    </div>
    <div class="span4">
      <%= f.label 'Estimated Monthly Budget' %><br />
      <%= f.select :budget, ['Select One...', '$100 - $499', '$500 - $999', '$1000 - $1499', '$1500 - $1999', '$2000+'], "id"=>"normalSelect" %>
    </div><br />
  </div><br />

  <div class="row">
    <div class="span5 offset3">
      <%= f.label 'Interested In' %><br />
      <ul class='inputs-list' style="margin-left:20px">
        <li>
          <%= f.check_box(:subscription) %>
          <%= f.label(:subscription, "Subscriptions") %>
        </li><br />
        <li>
          <%= f.check_box(:featuring_events) %>
          <%= f.label(:featuring_events, "Featuring Events") %>
        </li><br />
        <li>
          <%= f.check_box(:social_media) %>
          <%= f.label(:social_media, "Social Media Consulting") %>
        </li><br />
      </ul>
    </div>
    <div class="span4">
      <%= f.label 'Estimated Start Date' %><br />
      <%= f.select :begin, ['Select One...', '1 - 2 weeks', '3 - 4 weeks', '1+ months'], "id"=>"normalSelect" %>
    </div>
  </div>

  <div class="row">
    <div class="span4 offset8">
      <%= f.label 'Non-Profit? (optional)' %>
      <ul class='inputs-list' style='margin-left:20px'>
        <li>
          <%= f.check_box(:non_profit) %>
          <%= f.label(:non_profit, 'This is for non-profit organizations') %>
        </li><br />
      </ul>
    </div>
  </div><br /><br />

  <div class="row">
    <div class="span3" style="margin-top:-6px">
      <h3>About You</h3>
    </div>
    <div class="span5">
      <%= f.label 'First Name' %><br />
      <%= f.text_field :first_name, "id"=>"xlinput" %>
    </div>
    <div class="span4">
      <%= f.label 'Agency Name' %><br />
      <%= f.text_field :agency, "id"=>"xlinput" %>
    </div>
  </div><br />

  <div class="row">
    <div class="span5 offset3">
      <%= f.label 'Last Name' %><br />
      <%= f.text_field :last_name, "id"=>"xlinput" %>
    </div>
    <div class="span4">
      <%= f.label 'City' %><br />
      <%= f.text_field :city, "id"=>"xlinput" %>
    </div>
  </div><br />

  <div class="row">
    <div class="span5 offset3">
      <%= f.label :email %><br />
      <%= f.email_field :email, "id"=>"xlInput" %>
    </div>
    <div class="span4">
      <%= f.label 'Phone' %><br />
      <%= f.text_field :phone, "id"=>"xlinput" %>
    </div>
  </div><br /><br /><br />

  <div class="row">
    <div class="span3" style="margin-top:-6px">
      <h3>Anything Else?</h3>
    </div>
    <div class="span9">
      <%= f.label 'Comments (optional)' %><br />
      <%= f.text_area :comments, "class"=>"span9", :rows => 5 %>
    </div>
  </div><br /><br />

  <div class="row">
    <div class="span5 offset3">
      <%= f.submit 'Submit', "class"=>"btn small primary" %>
    </div>
  </div>
    <% end %><br /><br />
  </div>
</fieldset>
