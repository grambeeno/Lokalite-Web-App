<section class="plan cf">
  <div class='title cf'>
    <div class="half">
      <div class="title-image">
        <%= image_tag @plan.user.image_url %>
      </div>
      <div class="text">
        <h1>
          <%= @plan.title %>
          <% if user_signed_in? && @plan.is_editable_by?(current_user) %>
            <span class='edit'><%= link_to '(edit)', edit_plan_path(@plan) %></span>
          <% end %>
        </h1>
        <h2>
          By
          <%= @plan.user.full_name %>
        </h2>
      </div>
    </div>
    <div class="half ext">
      <%= link_to "Invite Friends", '#', :class => 'btn primary mts invite-to-plan ext', 'data-title' => @plan.title, 'data-description' => @plan.description, 'data-uuid' => @plan.uuid  %>
    </div>
  </div>

  <div class='image'>
    <%= google_maps_image(@plan, :size => '300x300') %>
  </div>

  <div class="detail">
    <dl>
      <dt>Time</dt>
      <dd><%= render :partial => '/events/time_span', :locals => {:event => @plan} %></dd>

      <dt>Description</dt>
      <dd><%= clean_format @plan.description %></dd>

      <dt>Events</dt>
      <dd class="more-events event-thumbs cf">
        <% for event in @plan.events[0...5] %>
          <%= link_to image_tag(event.image.url(:small), :class => 'tooltip profile_small', :title => event.name), event_path(event.slug, event.id) %>
        <% end -%>
      </dd>
    </dl>
  </div>

</section>

<div class='content'>
  <%= facebook_comments(:url => plan_url(@plan), :posts => 6) %>
</div>

