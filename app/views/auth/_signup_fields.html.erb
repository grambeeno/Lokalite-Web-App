<div class='sign-up-fields'>
  <div>
    <%= label_tag 'Email' %>
    <br />
    <%= text_field_tag :email, @email %>
  </div>

  <div>
    <%= label_tag 'Email Confirmation' %>
    <br />
    <%= text_field_tag :email_confirmation, @email_confirmation %>
  </div>

  <div>
    <%= label_tag 'Password' %>
    <br />
    <%= password_field_tag :password, @password %>
  </div>

  <br />
  <%= submit_tag :signup, :value => "Sign Up" %>
  or
  <%= link_to 'login', login_path %>

</div>
