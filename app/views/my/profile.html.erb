<div class='form'>
  <h1>Edit Your Profile</h1>

  <%= semantic_form_for @user, :url => edit_profile_path do |form| %>
    <%= form.inputs do %>
      <li>
        <%= form.error_messages %>
      </li>
      <%= form.input :email %>
      <%= form.input :password, :input_html => {:value => ''} %>
      <%#= form.input :time_zone %>

      <%= form.submit 'Update Profile' %>
    <% end %>
  <% end %>
</div>
