<%
  context "Statuses #{ @organization.name.inspect }"
%>

<% form do %>

    <legend> New Status </legend>
    <input name='status' class='orgstatus' maxlength='140' placeholder='140 Characters Max'/>
    <br />
    <br />
    <input type='submit' value='Set Status'/>
    <br />
    <br />
    <ol>
      <% @statuses.each do |status| %>
        <li>
          <%= c status %> <span class='hint'><%= time_ago_in_words status.created_at %> ago</span>
        </li>
      <% end %>
    </ol>

<% end %>

